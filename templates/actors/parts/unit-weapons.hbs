<div class="items-section weapons-section">
  <div class="items-header">
    <h3>{{localize "STARMERCS.Weapons"}}</h3>
    <div class="weapons-header-actions">
      {{#if hasTargetedWeapons}}
        <a class="fire-all-weapons" title="Fire All Targeted Weapons">
          <i class="fas fa-crosshairs"></i> Fire All
        </a>
        <a class="clear-all-targets" title="Clear All Targets">
          <i class="fas fa-times-circle"></i> Clear All
        </a>
      {{/if}}
      <a class="item-create" data-type="weapon" title="Add Weapon">
        <i class="fas fa-plus"></i>
      </a>
    </div>
  </div>

  {{#if weapons.length}}
    <ol class="item-list">
      <li class="item-list-header">
        <span class="item-name">Name</span>
        <span class="item-detail item-type">Type</span>
        <span class="item-detail item-accuracy">Acc</span>
        <span class="item-detail item-damage">Dmg</span>
        <span class="item-detail item-range">Range</span>
        <span class="item-detail item-target-col">Target</span>
        <span class="item-controls-header">Actions</span>
      </li>
      {{#each weapons as |weapon|}}
      <li class="item {{#if weapon.targetName}}has-target{{/if}}" data-item-id="{{weapon._id}}">
        <span class="item-name clickable weapon-roll" title="Roll Attack (single)">
          <img src="{{weapon.img}}" width="24" height="24"/>
          {{weapon.name}}
        </span>
        <span class="item-detail item-type">{{weapon.system.attackType}}</span>
        <span class="item-detail item-accuracy">{{weapon.system.accuracy}}+</span>
        <span class="item-detail item-damage">{{weapon.system.damage}}</span>
        <span class="item-detail item-range">{{weapon.system.range}}</span>
        <span class="item-detail item-target-col">
          {{#if weapon.targetName}}
            <span class="weapon-target-name" title="{{weapon.targetName}}">{{weapon.targetName}}</span>
          {{else}}
            <span class="weapon-target-none">â€”</span>
          {{/if}}
        </span>
        <span class="item-controls">
          <a class="weapon-assign-target" title="Assign Target (select a token first)"><i class="fas fa-crosshairs"></i></a>
          {{#if weapon.targetName}}
            <a class="weapon-clear-target" title="Clear Target"><i class="fas fa-times"></i></a>
          {{/if}}
          <a class="item-chat" title="Post to Chat"><i class="fas fa-comment"></i></a>
          <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
          <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
        </span>
      </li>
      {{/each}}
    </ol>
  {{else}}
    <p class="empty-list">No weapons. Click + to add one.</p>
  {{/if}}
</div>
