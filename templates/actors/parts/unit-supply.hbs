<div class="supply-section">
  <h3>Supply</h3>
  <div class="supply-grid">

    <div class="attribute-block">
      <label>Current Supply</label>
      <div class="resource-bar">
        <input type="number" name="system.supply.current"
               value="{{system.supply.current}}" min="0" max="{{system.supply.capacity}}"/>
        <span class="sep">/</span>
        <input type="number" name="system.supply.capacity"
               value="{{system.supply.capacity}}" min="0"/>
      </div>
    </div>

    <div class="attribute-block">
      <label>Supply Usage</label>
      <div class="input-with-suffix">
        <input type="number" name="system.supply.usage"
               value="{{system.supply.usage}}" min="0"/>
        <span class="suffix">per turn</span>
      </div>
    </div>

  </div>

  {{!-- Supply Transfer (only during preparation phase) --}}
  {{#if canTransferSupply}}
    <div class="supply-transfer-section">
      <button type="button" class="transfer-supply-btn">
        <i class="fas fa-truck"></i> Transfer Supply
        <span class="transfer-range-info">({{supplyTransferRange}} hex range)</span>
      </button>
    </div>
  {{else}}
    <div class="supply-transfer-section">
      <span class="transfer-disabled-note">
        <i class="fas fa-clock"></i> Supply transfers are only allowed during the Preparation phase.
      </span>
    </div>
  {{/if}}

  {{#if hasNoSupply}}
    <div class="supply-warning">
      <i class="fas fa-exclamation-triangle"></i>
      No supply â€” only Hold, Move, and Withdraw orders are available.
    </div>
  {{/if}}

  <div class="notes-section">
    <h3>Notes</h3>
    <textarea name="system.notes" rows="6" placeholder="Unit notes...">{{system.notes}}</textarea>
  </div>
</div>
